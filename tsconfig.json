{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./build",
    "baseUrl": "./",
    "incremental": true,
    "isolatedModules": false,
    "noEmit": false
  },
  "exclude": ["node_modules", "build"],
  "typeAcquisition": { "enable": true }
}
